/**index.wxss**/
@import "../../wxSearchView/wxSearchView.wxss";
@import '../../components/mystar/mystar.wxss';
@import '../../components/storeitem/storeitem.wxss';

page {
  background: #f7f7f7;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.container {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.slide-image {
  width: 100%;
  display: block;
  margin-bottom: 8px;
  /*border-radius:20rpx;*/
}

.searchViewContainer {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 8px;
}

.searchViewContainer .location {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
}

.searchViewContainer .location image {
  height: 16px;
  width: 16px;
}

/* */

.header-title {
  text-align: center;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.navbtns {
  display: flex;
  height: 80rpx;
  flex-wrap: nowrap;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}

.navbtns .navitem {
  flex: 1;
  text-align: center;
  color: #777;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.navbtns .navitem image {
  display: inline-block;
  width: 26rpx;
  height: 26rpx;
  margin-left: 6rpx;
  vertical-align: middle;
}

.navbtns .line {
  width: 3rpx;
  background-color: #aaa;
  height: 45rpx;
  flex-shrink: 0;
}

.wrap {
  position: relative;
}

.wrap .spinner {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1;
  top: 0;
  left: 0;
}

.wrap .spinner .items {
  background-color: #fff;
  padding-left: 20rpx;
}

.wrap .spinner .items .item {
  padding-left: 25rpx;
  border-bottom: 1rpx solid #777;
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  font-size: 30rpx;
}

.scroller {
  margin-top: -5rpx;
}

.reachBottomView {
  color: #888;
  display: flex;
  flex-direction: row;
  flex: 1;
  justify-content: center;
  padding: 8px;
  font-size: 28rpx;
}
